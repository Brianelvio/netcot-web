                    <div class="space-20"></div>
                    <div class="desc wow fadeInUp" data-wow-delay="0.6s">
                        <!-- LOGIN FORM -->
                        <form class="login-form" action="/login" method="post">
                            <input type="email" class="control" placeholder="Enter your email" required="required" id="login-email" name="email">
                            <input type="password" class="control" placeholder="Enter your password" required="required" id="login-password" name="password" >
                            <div class="space-20"></div>
                            <button type="submit" class="bttn-white wow fadeInUp" data-wow-delay="0.8s"><i class="lnr lnr-lock"></i>Login</button>
                        </form>
                        <!-- END FORM -->
                        <div class="space-20"></div>
                        <a class="white-color" href="/recover">Forgot password?</a>
                        <br />
                        <a class="white-color" href="/register">Not registered? Sign up here!</a>
                    </div>
                </div>
            </div>
            <% } else { %>
